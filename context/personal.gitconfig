[color]
    diff = auto
    status = auto
    branch = auto
    show-branch = always
[user]
    name = Tavis Aitken
    email = tavisto@tavisto.net
[core]
    excludesfile = ~/.gitignore
    pager = /usr/bin/less -R
[alias]
    glog = log --graph --oneline --decorate --all
    vlog = log --date=short --graph --pretty='%C(auto) %h %d%Cblue %ad%Cred %aN %Creset%s'
    root = !pwd
[push]
    default = simple
